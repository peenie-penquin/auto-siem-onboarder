@model AutoSiem.ScriptSettings

@{
    ViewData["Title"] = "Create";
}
<br>
<h4><strong>Add Settings</strong></h4>

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddSettings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomLogPaths" class="control-label"></label>
                <input asp-for="CustomLogPaths" class="form-control" />
                <span asp-validation-for="CustomLogPaths" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="isSystemLogs" class="control-label"></label>
                <input asp-for="isSystemLogs" type="checkbox" class="form-control" />
                <span asp-validation-for="isSystemLogs" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OperatingSystem" class="control-label"></label>
                <select asp-for="OperatingSystem" class="form-control">
                    <option value="0">Debian</option>
                    <option value="1">Ubuntu</option>
                    <option value="2">CentOS</option>
                    <option value="3">RHEL</option>
                    <option value="4">IUseArchBtw</option>
                    <option value="5">Windows10</option>
                    <option value="6">Windows7</option>
                    <option value="7">WindowsXP</option>
                    <option value="8">WindowsNT</option>
                    <option value="9">Windows2000</option>
                    <option value="10">Unknown</option>
                </select>
                <span asp-validation-for="OperatingSystem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
